%h1 Editing interview
= form_for(@interview, :url =>  candidate_interview_path(:candidate_id => @interview.candidate.id, :id => @interview.id)) do |f|
  = render :partial => 'form', :locals => { :interview_form => f }
  .actions
    = f.submit(:class => 'button')
    = link_to "Cancel", candidate_path(:id => @interview.candidate.id), :class => 'button secondary'
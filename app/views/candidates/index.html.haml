%h1.left Listing candidates
.right
  (max 50 records)
  %b by
  = params[:filter].each.collect { |key, value| "#{key}: #{value}"}.join(", ") unless params[:filter].nil?
%table
  %tr
    %th name
    %th email
    %th role
    %th exp
    %th skills
    %th coordinator
    %th Contact number
    %th Status
    %th
    %th
    %th
  - @candidates.each do |candidate|
    %tr
      %td= candidate.name
      %td= candidate.email
      %td= "#{candidate.role}, #{candidate.position}"
      %td= candidate.experience
      %td= candidate.skills
      %td= candidate.coordinator
      %td= candidate.contact_number
      %td= candidate.status
      %td
        = link_to 'Show', candidate, :class => "small"
        = link_to 'Edit', edit_candidate_path(candidate), :class => "small"
        = link_to 'Delete', candidate, :confirm => 'Are you sure?', :method => :delete, :class => "small secondary"
  
